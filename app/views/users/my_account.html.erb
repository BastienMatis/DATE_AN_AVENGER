<div class="container mb-4 ml-4 container-account">
  <div class="profile row align-items-center">
      <img alt="Chloe Balanche" class="avatar-large mr-2" src="https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1619968189/kjpxyr85dbcktwhwld4q.jpg">
      <h1><%= @user.email %></h1>
    <!-- LEFT: AVATAR HERE -->
  </div>
  <div class="row justify-content-between align-items-start">
    <div class="col-6 text-center">
      <h2 class="mb-5">My Avengers</h2>
      <%= link_to 'add an avenger', new_avenger_path, class: 'nav-avenger my-4'  %>
      <div class="row mt-3">
        <% @avengers.each do |avenger| %>
          <div class="col-4 colsm-6 col-md-4">
            <%= link_to avenger_path(avenger), class:'text-decoration-none' do %>
              <div class="card-index" data-aos="zoom-in">
                <%=avenger.name %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
    <div class="col-6 ">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
          <h2 class="booking-request">My bookings</h2></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
          <h2 class="booking-request">My requests</h2></a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <div class="row mt-3">
            <% @bookings.each do |booking| %>
              <div class="col-12">
                <div class="card-index" data-aos="zoom-in">
                  <%= link_to avenger_path(booking.avenger), class:'text-decoration-none' do %>
                    <%= booking.avenger.name %>
                  <% end %>
                  <p><%= booking.start_time.strftime("%A, %b %d")%> - <%= booking.end_time.strftime("%A, %b %d")%></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <div class="row mt-3">
            <% @my_received_bookings.each do |request| %>
              <div class="col-12">
                <%= link_to avenger_path(request.avenger), class:'text-decoration-none' do %>
                  <div class="card-index" data-aos="zoom-in">
                    <%=request.avenger.name %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



       <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't booked a date with an Avenger yet!" if current_user.bookings.empty? %></em></small></span>


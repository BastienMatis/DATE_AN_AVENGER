<div class="container mb-4">
  <div class="profile row">
    <div class="col-avatar">
      <h1><%= @user.email %></h1>
    <!-- LEFT: AVATAR HERE -->
    </div>
  </div>
</div>


  <div class="container mb-3">
    <div class="d-flex justify-content-between my-4">
       <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't booked a date with an Avenger yet!" if current_user.bookings.empty? %></em></small></span>
        <div>
          <%= link_to 'add an avenger', new_avenger_path, class: 'btn btn-avenger' %>
          <%#= link_to 'delete this booking', booking_path(@booking), method: :delete, class: "btn btn-secondary", data: { confirm: 'Are you sure you want to delete this booking?' } %>
        </div>
      </div>
    </div>


  <div class="row my-2">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <div class="p-3 rounded-bottom d-flex flex-column">
            <div class="d-flex align-items-end justify-content-between pt-4">
              <small class="text-right flex-shrink-0"><%= link_to 'delete', booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel your booking for #{booking.avenger.name}?"}, class: 'text-danger' %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

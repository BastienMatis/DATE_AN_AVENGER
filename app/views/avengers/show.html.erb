<div class='container-show'>
  <h2> <%= @avenger.name %></h2>
      <h3><%= @avenger.description %></h3>
       <h3><%= @avenger.price %></h3>
       <h3><%= @avenger.location %></h3>
  <div class="container">
    <div class="row">
      <div class="row justify-content-center">
    <div class="cards">
      <div class="card-category">
      </div>
      </div>
        <button type="button" class="btn-red" data-toggle="modal" data-target="#exampleModalCenter">
          Book Me
        </button>
        <%= link_to 'Back', avengers_path, class:'btn-grey' %>
    </div>
  </div>
  </div>

  <div><%= image_tag 'Chris_Evans.jpeg', class: 'avenger-pic' %></div>
</div>




<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Create a Booking</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <%= simple_form_for [@avenger, @booking], method: :post, url: avenger_bookings_path(@avenger) do |f| %>
          <div class="form-inputs">
            <%= f.input :location %>
            <%= f.input :start_time, as: :datetime, html5: true%>
            <%= f.input :end_time, as: :datetime, html5: true%>
          </div>
        
      </div>
      <div class="modal-footer">
        <%= f.submit "Create Booking", class: 'btn-red' %>
        <% end %>
        <button type="button" class="btn-grey" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<%#= The below code is good to add to the user profile page, but needs to be removed from bookings show, we don't need a bookings show page %>
<div class="position-relative">
  <% current_user.bookings.each do |booking|  %>
    <div class="card-category card-large">
        <h1><%= current_user.booking.avenger.name %></h1>
    </div>
    <div class="container mb-3">
      <div class="d-flex justify-content-between my-4">
        <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't booked a date with an Avenger yet!" if current_user.bookings.empty? %></em></small></span>
        <div>
          <%= link_to 'delete this booking', booking_path(@booking), method: :delete, class: "btn btn-secondary", data: { confirm: 'Are you sure you want to delete this booking?' } %>
        </div>
      </div>
    </div>
  <%end%>
</div>
<div class="container py-2">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Leave your avenger review here</h3>
        <%= simple_form_for [@avenger, @review] do |f| %>
          <div class="form-inputs">
            <%= f.input :content %>
            <%= f.input :rating, collection: 1..5 %>
            <%= f.submit "Create Review", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>

<%= link_to 'view', edit_avenger_path(@avenger) %>



